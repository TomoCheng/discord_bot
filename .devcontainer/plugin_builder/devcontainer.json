// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "plugin_builder-devcontainer",
	"dockerComposeFile": [
		"../compose.yaml"
	],
	"service": "plugin_builder",
	"runServices": [
		"plugin_builder"
	],
	"workspaceFolder": "/workspaces",
	"postCreateCommand": "cp /builds/plugin/build/libs/youtube-source-*.jar ./lavalink/plugins/hung-plugin.jar",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/dev_user/.ssh,type=bind"
	],
	"remoteUser": "gradle"
}